<!DOCTYPE html>
<html lang="pl">
<head>
    <!-- METATAGS -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="{{ config.meta_robots }}">
    <meta name="googlebot" content="{{ config.googlebot }}">
    <meta name="Description" content="{{ settings.meta_description.value | replace({"\n": ""}) }}">
    <meta name="Keywords" content="{{ settings.meta_keywords.value | replace({"\n": ""})}}">

    <title>{{ settings.meta_title.value }}</title>
    <base href="{{ site_url() }}">

    <!-- FAVICO -->
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">
    <link rel="icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">

    <!-- CSS STYLES -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,700,300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    {% block stylesheet %}

    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    {% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    {% block topbar %}

        <div id="topBar">

            <nav class="navbar">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#topMenuCollapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo">
                        <a href="{{ site_url() }}"><img src="{{ asset('img/nu-logo.png') }}" alt="nuCMS Demo Site" title="nuCMS Demo Site"></a>
                    </div>
                </div>

                <div class="collapse navbar-collapse" id="topMenuCollapse">
                    {{
                        widget('Menu_widget::display', {
                            'position': 1,
                            'config': {
                                'item_active': '/',
                                'nav_tag_open': '<ul id="menuTop" class="nav navbar-nav">',
                                'children_tag_open': '<ul class="dropdown-menu">',
                                'parent_anchor': '<a tabindex="0" data-toggle="dropdown" href="%s" target="%s">%s<span class="caret"></span></a>',
                            }
                        })
                    }}
                </div><!-- /.navbar-collapse -->
            </nav>

        </div><!--/topBar-->

    {% endblock %}

    {% block bannersTop %}

        <div id="bannersTop">
        </div><!--/bannersTop-->

    {% endblock %}

    {% block body %}{% endblock %}

    <footer id="footer">

        {{
            widget('Menu_widget::display', {
                'position': 2,
                'config': {
                    'item_active': '/',
                    'nav_tag_open': '<ul id="menuFooter">',
                }
            })
        }}

        <span class="copyright">
            Copyright &copy; 2016 nuGroup
        </span>

        <div class="socials">
            {% if socials.facebook %}
                <a href="{{ socials.facebook }}" target="_blank"><i class="fa fa-facebook"></i></a>
            {% endif %}
            {% if socials.twitter %}
                <a href="{{ socials.twitter }}" target="_blank"><i class="fa fa-twitter"></i></a>
            {% endif %}
            {% if socials.youtube %}
                <a href="{{ socials.youtube }}" target="_blank"><i class="fa fa-youtube"></i></a>
            {% endif %}
            {% if socials.google %}
                <a href="{{ socials.google }}" target="_blank"><i class="fa fa-google-plus"></i></a>
            {% endif %}

        </div>
    </footer>

    {% block javascript %}

        <script src="{{ asset('js/jquery-1.11.3.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/SmoothScroll.js') }}"></script>
        <script src="{{ asset('js/functions.js') }}"></script>

    {% endblock %}

    <script type="text/javascript">
    <!--
    (function() {
        if ("-ms-user-select" in document.documentElement.style && (navigator.userAgent.match(/IEMobile\/10\.0/) || navigator.userAgent.match(/IEMobile\/11\.0/))) { 
            var msViewportStyle = document.createElement("style"); 
            msViewportStyle.appendChild( 
