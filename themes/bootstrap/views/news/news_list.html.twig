{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="page-header text-center">
            <h1>{{ news_category.name }}</h1>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="newsList">
                    <div class="row">
                        {% for news in news_list %}

                            <div class="col-sm-6 col-md-6">
                                <div class="thumbnail newsSingle">
                                    <a href="{{ news.slug }}">
                                        {{
                                        generate_thumbnail(
                                            news.file_filename,
                                            'sm',
                                            news.file_alt,
                                            news.file_title,
                                            'img-responsive',
                                            false
                                        ) | raw
                                        }}
                                    </a>

                                    <div class="caption">
                                        <h3>{{ news.title }}</h3>
                                        <p>{{ news.content_preview }}</p>
                                        <p>
                                            <a href="{{ news.slug }}" class="btn btn-primary" role="button">{{ lang('news.more') }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            {% if loop.index % 2 == 0 %}

                            </div><div class="row">

                            {% endif %}

                        {% endfor %}
                    </div>

                    {% if pager %}

                        <!-- pagination -->
                        <nav>
                            {{ pager | raw }}
                        </nav>
                        <!-- /pagination -->

                    {% endif %}
                </div><!-- /.newsList -->
            </div>
            <div class="col-sm-4">
{#                <h3>{{ news_category.name }}</h3>#}
                {{
                    widget('News_widget::render_category_menu')
                }}
            </div>
        </div>
    </div><!--/.container-->

{% endblock %}
