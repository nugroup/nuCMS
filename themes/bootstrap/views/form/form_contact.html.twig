<div class="form-contact">

    {% if validation_errors %}

        <div class="alert alert-danger">
            {{ validation_errors | raw }}
        </div>

    {% endif %}

    {% if validation_success == '' %}

        {{ form_open(current_full_url(), 'role="form" method="post" novalidate') }}

        <div class="form-group">
            <label for="formContactName" class="sr-only">{{ lang('form.contact.name') }}</label>
            <div>
                {{
                    form_input({
                        'type': 'text',
                        'name': 'formContact[name]',
                        'id': 'form-contact-name',
                        'class': 'form-control',
                        'placeholder': lang('form.contact.name'),
                        'value': set_value('formContact[name]'),
                        'required': true
                    })
                }}
            </div>
        </div>
        <div class="form-group">
            <label for="form-contact-email" class="sr-only">{{ lang('form.contact.email') }}</label>
            <div>
                {{
                    form_input({
                        'type': 'email',
                        'name': 'formContact[email]',
                        'value': set_value('formContact[email]'),
                        'id': 'form-contact-email',
                        'class': 'form-control',
                        'placeholder': lang('form.contact.email'),
                        'required': true
                    })
                }}
            </div>
        </div>
        <div class="form-group">
            <label for="message" class="sr-only">{{ lang('form.contact.message') }}</label>
            <div>
                {{
                    form_textarea({
                        'type': 'text',
                        'name': 'formContact[message]',
                        'value': set_value('formContact[message]'),
                        'id': 'form-contact-message',
                        'class': 'form-control',
                        'placeholder': lang('form.contact.message'),
                        'required': true,
                        'rows': 5
                    })
                }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" name="formContact[submit]" value="1">
                {{ lang('form.contact.submit') }}
            </button>
        </div>

        {{ form_close() }}

    {% else %}

        <div class="alert alert-success">
            {{ validation_success }}
        </div>

    {% endif %}

</div><!--/.form-contact-->