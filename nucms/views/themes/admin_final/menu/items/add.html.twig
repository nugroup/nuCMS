<!-- add item buttons -->
<div class="addButtons text-right">
    <button class="btn btn-orange" type="button" data-type="1">{{ lang('menu.text.add_slug') }}</button>
    <button class="btn btn-orange" type="button" data-type="2">{{ lang('menu.text.add_page') }}</button>
</div>

<!-- add item type 1 -->
<div class="form-box addItem type1">

    <div id="menu-add-form-1">

        <div class="actionsButtons text-right">
            <button type="button" class="btn btn-default btn-sm closeAddItem">{{ lang('text.cancel') }}</button>
            <button type="button" class="btn btn-save btn-sm menuAdd" data-menu_type="1">{{ lang('text.add') }}</button>
        </div>

        <!-- margin -->
        <div class="clearfix baseMargin"></div>

        <!-- name -->
        <div class="form-group">
            <label for="add_name_1" class="col-xs-12 control-label">{{ lang('menu.form.name') }}:</label>
            <div class="col-xs-12">
                {{ form_input({'data-name': 'name', 'class': 'form-control add_menu_item_1', 'id': 'add_name_1', 'required': 'required' }) }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- target -->
        <div class="form-group">
            <label for="edit_target_2" class="col-xs-12 control-label">{{ lang('menu.form.target') }}:</label>
            <div class="col-xs-12">
                {{ form_dropdown({'class': 'form-control', 'data-name': 'target', 'required': 'required'}, config.menu.targets, '') | raw }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="add_slug_1" class="col-xs-12 control-label">{{ lang('menu.form.slug') }}:</label>
            <div class="col-xs-12">
                {{ form_input({'data-name': 'data-slug', 'class': 'form-control add_menu_item_1', 'id': 'add_slug_1', 'required': 'required' }) }}
            </div>
            <div class="clearfix"></div>
        </div>

        {{ form_input({'type': 'hidden', 'data-name': 'type', 'value': 1})}}
        {{ form_input({'type': 'hidden', 'data-name': 'type_ico', 'value': 'fa fa-link ico'})}}

    </div><!--/menu-add-form-1-->

</div><!--/.addItem type1-->

<!-- add item type 2 -->
<div class="form-box addItem type2">

    <div id="menu-add-form-2">

        <div class="actionsButtons text-right">
            <button type="button" class="btn btn-default btn-sm closeAddItem">{{ lang('text.cancel') }}</button>
            <button type="button" class="btn btn-save btn-sm menuAdd" data-menu_type="2">{{ lang('text.add') }}</button>
        </div>

        <!-- margin -->
        <div class="clearfix baseMargin"></div>

        <!-- name -->
        <div class="form-group">
            <label for="add_name_2" class="col-sm-3 control-label">{{ lang('menu.form.name') }}:</label>
            <div class="col-sm-9">
                {{ form_input({'data-name': 'name', 'class': 'form-control add_menu_item_2', 'id': 'add_name_2', 'required': 'required' }) }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- target -->
        <div class="form-group">
            <label for="edit_target_2" class="col-sm-3 control-label">{{ lang('menu.form.target') }}:</label>
            <div class="col-sm-9">
                {{ form_dropdown({'class': 'form-control', 'data-name': 'target', 'required': 'required'}, config.menu.targets, '') | raw }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- primary_key -->
        <div class="form-group">
            <label for="add_url_1" class="col-sm-3 control-label">{{ lang('menu.form.page') }}:</label>
            <div class="col-sm-9">
                {{ form_dropdown({'class': 'form-control add_menu_item_2', 'data-name': 'primary_key', 'required': 'required'}, pages_options) | raw }}
            </div>
            <div class="clearfix"></div>
        </div>

        {{ form_input({'type': 'hidden', 'data-name': 'type', 'value': 2})}}
        {{ form_input({'type': 'hidden', 'data-name': 'type_ico', 'value': 'fa fa-file-o ico'})}}

    </div><!--/menu-add-form-2-->

</div><!--/.addItem type2-->