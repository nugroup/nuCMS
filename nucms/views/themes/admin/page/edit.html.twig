    {{ parent() }}

    <script src="{{ asset('include/tinymce/tinymce.min.js') }}"></script>

    <script>

        tinymce.init({
            selector: '.tinyEditor',
            language: 'pl',
            content_css : "{{ asset('include/tinymce/style_tinymce.css') }}",
