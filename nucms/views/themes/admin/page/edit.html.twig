                {title: 'Example 2', inline: 'span', classes: 'example2'},
                {title: 'Table styles'},
                {title: 'Table row 1', selector: 'tr', classes: 'tablerow1'}
            ],

            // links
            rel_list: [
                {title: '-', value: ''},
                {title: 'Nie śledź linku', value: 'nofollow'}
            ],
            // class for links
            link_class_list: [
                {title: '-', value: ''}
            ],
            // class for tables
            table_class_list: [
                {title: '-', value: ''}
            ],

            plugin_preview_width : "900",
            plugin_preview_height : "500"
        });

    </script>
