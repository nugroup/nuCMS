{% extends 'base.html.twig' %}

{% block subnav %}

    {% include 'language/subnav.html.twig' %}

{% endblock %}

{% block body %}

    <!-- page list -->
    <div class="container">

        <!-- toolbar-->
        {% include 'language/toolbar.html.twig' %}

        {% if (languages) %}

            {{ form_open() }}

            <div class="row">
                <div class="col-xs-12">
                    <table class="table firstIsIcon lastIsIcon">
                        <thead>
                            <tr>
                                <th><i class="check_all ion ion-checkmark"></i></th>
                                <th class="txtUpper">{{ lang('language.list.name') }}</th>
                                <th class="txtUpper">{{ lang('language.list.locale') }}</th>
                                <th class="txtUpper">{{ lang('language.list.folder_name') }}</th>
                                <th class="txtUpper" style="width: 50px;">{{ lang('language.list.active') }}</th>
                                <th style="width: 110px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for language in languages %}
                                <tr id="item_{{ language.id }}">
                                    <td>
                                        <label class="checkboxIcon{{ language.default == 1 ? ' default' : '' }}">
                                            {{ form_checkbox({'name': 'check_item['~language.id~']', 'class': 'check_item', 'value': 1}) }}
                                            <i class="ion ion-checkmark"></i>
                                            <img class="flag" src="{{ asset('img/flags/'~language.locale~'.png') }}" alt="{{ locale.name }}">
                                        </label>
                                    </td>
                                    <td>
                                        <div class="txtBig">{{ language.name }}</div>
                                    </td>
                                    <td>{{ language.locale }}</td>
                                    <td>{{ language.folder_name }}</td>
                                    <td class="text-center">
                                        <span class="superCheck">
                                            <label for="active_{{ language.id }}"></label>
                                            {{ form_checkbox({'id': 'active_'~language.id, 'class': 'change_bool', 'data-name': 'active', 'data-actionUrl': admin_url('language/update_active/'~language.id)}, 1, language.active) }}
                                            <span></span>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ admin_url('language/edit/'~language.id) }}"><i class="ion ion-android-create tableActions-edit"></i></a>
                                        <a href="{{ admin_url('language/delete') }}" rel="{{ language.id }}" class="deleteRecord" data-confirmMsg="{{ lang('language.text.confirm_delete') }}"><i class="ion ion-android-delete tableActions-delete"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- margin -->
            <div class="clearfix baseMargin-mini"></div>

            <!-- table bottom -->
            <div class="row tableBottom">
                <div class="col-xs-12 col-sm-4">

                    <!-- dropdown actions -->
                    <span class="txtUpper">{{ lang('text.checked_items') }}:</span>
                    <span class="btn-group dropup nuDropdown">
                        <span data-toggle="dropdown" class="txtBig hoverLine">{{ lang('text.choose') }} <i class="fa fa-angle-up"></i></span>
                        <ul class="dropdown-menu">
                            <li>
                                <button type="submit" name="action" value="delete_checked"><i class="ion ion-android-delete"></i>{{ lang('text.delete') }}</button>
                            </li>
                        </ul>
                    </span>

                </div>
                <div class="col-xs-12 col-sm-8 text-right">

                    <!-- pagination -->
                    <nav>
                        {{ pager | raw }}
                    </nav>

                </div>
            </div>

            {{ form_close() }}

        {% else %}

        <div class="alert alert-info">
            {{ lang('language.text.no_records') }}
        </div>

        {% endif %}

        <!-- margin -->
        <div class="clearfix baseMargin"></div>

    </div>

{% endblock %}

{% block javascript %}

    {{ parent() }}
    <script>

        $(document).on("click",'.change_bool',function(){

            var actionUrl = $(this).attr('data-actionUrl').toString();
            var fieldValue = $(this).prop('checked');
            var fieldName = $(this).attr('data-name').toString();

            changeBoolean(actionUrl, fieldValue, fieldName);

        });

    </script>

{% endblock %}