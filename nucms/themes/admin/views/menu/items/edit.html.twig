<div class="editItem type1">

    <div class="menu-edit-form-1">

        <!-- margin -->
        <div class="clearfix baseMargin"></div>

        <!-- name -->
        <div class="form-group">
            <label for="edit_name_1" class="col-xs-12 control-label">{{ lang('menu.form.name') }}:</label>
            <div class="col-xs-12">
                {{ form_input({'data-name': 'name', 'class': 'form-control', 'required': 'required', 'value': '' }) }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- target -->
        <div class="form-group">
            <label for="edit_target_2" class="col-xs-12 control-label">{{ lang('menu.form.target') }}:</label>
            <div class="col-xs-12">
                {{ form_dropdown({'data-name': 'target', 'class': 'form-control', 'required': 'required'}, config.menu.targets, '') | raw }}
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="edit_slug_1" class="col-xs-12 control-label">{{ lang('menu.form.url') }}:</label>
            <div class="col-xs-12">
                {{ form_input({'data-name': 'url', 'class': 'form-control', 'required': 'required', 'value': '' }) }}
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="actionsButtons text-right">
            <button type="button" class="btn btn-primary closeEditItem"><i class="fa fa-remove"></i></button>
            <button type="button" class="btn btn-success menuSave" data-type="1"><i class="fa fa-check"></i> {{ lang('text.save') }}</button>
        </div>

        {{ form_input({'type': 'hidden', 'data-name': 'id'}) }}

    </div><!--/#menu-edit-form-1-->

</div><!--/.editItem type1-->

