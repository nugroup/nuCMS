<script>

    function runTrumbowyg() {

        $('.tinyEditor').trumbowyg({
            btns: [
                ['viewHTML'],
                ['formatting'],
                'btnGrp-semantic',
                ['superscript', 'subscript'],
                ['link'],
                ['insertImage'],
                'btnGrp-justify',
                'btnGrp-lists',
                'foreColor',
                'backColor',
                ['horizontalRule'],
                ['removeformat'],
                ['fullscreen']
            ]
        })
        .on('tbwchange', function(){
            var content = $(this).trumbowyg('html');
            $(this).val(content);
            $(this).html(content);
        });
        
    }

</script>