{% extends 'base.html.twig' %}

{% block subnav %}

    {% include 'page/subnav.html.twig' %}

{% endblock %}

{% block body %}

<!-- page list -->
<div class="container">

    <!-- toolbar-->
    {% include 'page/toolbar.html.twig' %}

    {% if (pages) %}

        {{ form_open() }}

        <div class="row">
            <div class="col-xs-12">
                <table class="table firstIsIcon lastIsIcon">
                    <thead>
                        <tr>
                            <th><i class="check_all ion ion-checkmark"></i></th>
                            <th class="txtUpper">{{ lang('page.list.title') }}</th>
                            <th class="txtUpper">{{ lang('page.list.created_at') }}</th>
                            <th class="txtUpper" style="width: 50px;">{{ lang('page.list.active') }}</th>
                            <th style="width: 110px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for page in pages %}
                            <tr id="item_{{ page.page_id }}">
                                <td>
                                    <label class="checkboxIcon">
                                        {{ form_checkbox({'name': 'check_item['~page.page_id~']', 'class': 'check_item', 'value': 1}) }}
                                        <i class="ion ion-checkmark"></i>
                                        <i class="ion ion-ios-paper-outline"></i>
                                    </label>
                                </td>
                                <td><div class="txtBig">{{ page.title }}</div></td>
                                <td>{{ page.created_at }}</td>
                                    <td class="text-center">
                                        <span class="superCheck">
                                            <label for="active_{{ page.id }}"></label>
                                            {{ form_checkbox({'id': 'active_'~page.id, 'class': 'change_bool', 'data-name': 'active', 'data-actionUrl': admin_url('page/update_active/'~page.id)}, 1, page.active) }}
                                            <span></span>
                                        </span>
                                    </td>
                                <td>
                                    <a href="{{ admin_url('page/edit/'~page.page_id) }}"><i class="ion ion-android-create tableActions-edit"></i></a>
                                    <a href="{{ admin_url('page/delete') }}" rel="{{ page.page_id }}" class="deleteRecord" data-confirmMsg="{{ lang('page.text.confirm_delete') }}"><i class="ion ion-android-delete tableActions-delete"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- margin -->
        <div class="clearfix baseMargin-mini"></div>

        <!-- table bottom -->
        <div class="row tableBottom">
            <div class="col-xs-12 col-sm-4">

                <!-- dropdown actions -->
                <span class="txtUpper">{{ lang('text.checked_items') }}:</span>
                <span class="btn-group dropup nuDropdown">
                    <span data-toggle="dropdown" class="txtBig hoverLine">{{ lang('text.choose') }} <i class="fa fa-angle-up"></i></span>
                    <ul class="dropdown-menu">
                        <li>
                            <button type="submit" name="action" value="delete_checked"><i class="ion ion-android-delete"></i>{{ lang('text.delete') }}</button>
                        </li>
                    </ul>
                </span>

            </div>
            <div class="col-xs-12 col-sm-8 text-right">

                <!-- pagination -->
                <nav>
                    {{ pager | raw }}
                </nav>

            </div>
        </div>

        {{ form_close() }}

    {% else %}

    <div class="alert alert-info">
        {{ lang('page.text.no_records') }}
    </div>

    {% endif %}

    <!-- margin -->
    <div class="clearfix baseMargin"></div>

</div>

{% endblock %}

{% block javascript %}

    {{ parent() }}
    <script>

        $(document).on("click",'.change_bool',function(){

            var actionUrl = $(this).attr('data-actionUrl').toString();
            var fieldValue = $(this).prop('checked');
            var fieldName = $(this).attr('data-name').toString();

            changeBoolean(actionUrl, fieldValue, fieldName);

        });

    </script>

{% endblock %}